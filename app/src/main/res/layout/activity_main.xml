<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/parentTema"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorprimary"
        android:padding="10dp"
        android:text="@string/text_heading"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/holo_orange_light"
        android:textColorHighlight="@color/colorYellow"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/kolom"
        android:layout_width="333dp"
        android:layout_height="187dp"
        android:layout_below="@+id/judul"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="368dp"
        android:layout_weight="1"
        android:background="@drawable/kolom_layout"
        android:gravity="top"
        android:hint="Masukkan Komentar"
        android:inputType="text"
        android:padding="10dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="130dp"
        android:text="atau hubungi kami lewat"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kolom"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="-350dp"
        android:background="@drawable/button"
        android:text="Submit"
        android:textSize="13dp" />

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/tv1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp">


        <ImageView
            android:id="@+id/img1"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/wa" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="-20dp"
            app:srcCompat="@drawable/ig" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/twitter" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL1"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="160dp"
        android:text="Create By"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_marginLeft="150dp"
        android:text="Alpha Pramadhani"
        android:textStyle="bold"
        android:textSize="15dp" />


</RelativeLayout>